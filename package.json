{
  "name": "openshare.social",
  "version": "1.0.0",
  "description": "Starting point for DS Node.js projects.",
  "main": "index.js",
  "browser": {
    "level": "level-browserify"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "start": "node index.js",
    "watch:js": "watchify browser/js/index.js -o browser/dist/bundle.js -dv",
    "watch:css": "node-sass -w browser/scss/main.scss browser/dist/bundle.css",
    "watch": "npm run watch:js & npm run watch:css",
    "build:js": "browserify browser/js/index.js -g uglifyify | uglifyjs -cm > browser/dist/bundle.js",
    "build:css": "node-sass browser/scss/main.scss browser/dist/bundle.css",
    "build": "npm run build:js & npm run build:css",
    "dev": "npm run watch & npm start",
    "production": "npm run build & npm start",
    "lint": "eslint **/*.js",
    "baitAndSwitch": "standard-format -w **/*.js"
  },
  "keywords": [
    "openshare.social"
  ],
  "author": "Digital Surgeons",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.9.2",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.2.2",
    "node-sass": "^3.8.0",
    "standard-format": "^2.2.1",
    "tape": "^4.6.0",
    "uglify-js": "^2.6.3",
    "uglifyify": "^3.0.2",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "body": "^5.1.0",
    "cookie": "^0.3.1",
    "has": "^1.0.1",
    "level": "^1.4.0",
    "node-twitter-api": "^1.7.4",
    "open-share": "^1.2.3",
    "oppressor": "0.0.1",
    "patterns": "^1.0.2",
    "rainbow-code": "^2.1.0",
    "st": "^1.1.0",
    "through": "^2.3.8",
    "through2": "^2.0.1",
    "trumpet": "^1.7.2",
    "xhr": "^2.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dsurgeons/ds-node-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/dsurgeons/ds-node-boilerplate/issues"
  },
  "homepage": "https://github.com/dsurgeons/ds-node-boilerplate#readme",
  "directories": {
    "test": "test"
  }
}
